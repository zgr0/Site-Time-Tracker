{
    "manifest_version": 3,
    "name": "Site Time Tracker",
    "version": "1.0",
    "description": "Tracks how much time is spent on each site.",
    "permissions": ["tabs", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  